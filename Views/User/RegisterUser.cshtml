@{

    Layout = null;
}


@model Register;

<!doctype html>
<html lang="fa" dir="rtl">

<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css"
          integrity="sha384-PJsj/BTMqILvmcej7ulplguok8ag4xFTPryRq8xevL7eBYSmpXKcbNVuy+P0RMgq" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/bootstrap.rtl.min.css" />
    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous" />

    <link rel="stylesheet" href="style.css" />
    <link href="~/css/signin.css" rel="stylesheet">

    <title>ثبت نام</title>

</head>

<body class="text-center" style="background-color: #525252;">

    <div class="shadow col-5 rounded-3" style="background-color: #949494;">
        <form asp-action="RegisterUser" enctype="multipart/form-data" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">ثبت نام</h1>

            <input asp-for="Name" type="text" class="form-control" placeholder="نام" required="">
            <input asp-for="family" type="text" class="form-control" placeholder="نام خانوادگی" required="">
            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل" required="">
            <input asp-for="Password" type="password" class="form-control" placeholder="رمزعبور" required="">
            <input asp-for="Password_2" type="password" class="form-control" placeholder="تکرار رمز عبور" required="">
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile01">آپلود تصویر</label>

                <input asp-for="UserPhoto" type="file" class="form-control" id="inputGroupFile01" accept="image/*" required="">
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> مرا به خاطر بسپار
                </label>
                @{
                    var res = ViewBag.res;
                    if (res != null)
                    {
                        <div class="alert alert-success" role="alert">
                            ثبت نام انجام شد

                        </div>
                    }

                }
            </div>

            <button class="btn btn-lg btn-block" type="submit" style="background-color: rgb(255, 72, 0); color: white;">
                ثبت
                نام
            </button>
          
            <div>
                <a class="change-link" asp-action="Login" asp-controller="User">حساب کاربری دارید؟ وارد شوید </a>
            </div>
        </form>
    </div>

</body>

</html>